<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  名前:
 <textarea class="form-control" id="exampleTextarea" rows="3"> <%= f.text_field :name %></textarea>

  内容:
   <textarea class="form-control" id="exampleTextarea" rows="3"> <%= f.text_field :body %></textarea>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>